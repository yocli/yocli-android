<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YoAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#063440</item>
        <item name="colorPrimaryVariant">#375e6b</item>
        <item name="android:colorPrimaryDark">#000e1a</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#5d5cde</item>
        <item name="colorSecondaryVariant">#9489ff</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
    </style>
</resources>